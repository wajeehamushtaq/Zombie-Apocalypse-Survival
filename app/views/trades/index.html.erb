<h1>Trades#index</h1>
<p>Find me in app/views/trades/index.html.erb</p>

<p id="notice"><%= notice %></p>

<h1>Resources</h1>

<table>
  <thead>
    <tr>
      <th>Item_name</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.item_name %></td>
        <td><%= resource.points %></td>
        <td><%= link_to 'Show', trade_path(resource) %></td>
        <td>

        
          <%= form_for @order_item, remote: true  do |f|%>
          <%= f.hidden_field :resource_id, :value => resource.id %>
          <%= f.number_field :quantity, :value => 1, :min =>  1%>
          <%= f.submit "Add to Card "%>


          <% end %>
        </td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div id="card">
  <%= render 'cards/card'%>
</div>
<%= render 'navbar' %>
<div class="card bg-dark">
  <div class="card-body">
    <div class="d-flex justify-content-around">
    <h3><%= @resource.item_name %></h3>
      <div>
        <%= link_to 'Edit', edit_resource_path(@resource) %> |
        <%= link_to 'Back', resources_path %>
      </div>
    </div>
  </div>
  <br />
  <div class="text-center">
      <p>
        <strong>Unit Points:</strong>
        <%= @resource.points %>
      </p>
      <p>
        <strong>Image:</strong>
        <%= image_tag(@resource.image, style: "width: 200px") if @resource.image.attached? %>
      </p>
  </div>
</div>


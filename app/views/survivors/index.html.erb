<h1>Survivors#index</h1>
<p>Find me in app/views/survivors/index.html.erb</p>

<h1>Survivors</h1>

<nav class="navbar navbar-light bg-light">
  <form class="form-inline" action="/search">
    <input class="form-control mr-sm-2" name="q" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</nav>

<ul>
<% if @survivor != current_user%>
  <% @survivors.each do |survivor| %>
    <li>
      <%= survivor.name %>
      <%= image_tag(survivor.avatar) %>
      <%= link_to like_survivor_path(survivor), class:"like", method: :put do%>
        <button>infected
        <span><%= survivor.get_upvotes.size%></span>
        </button>
        <%if survivor.get_upvotes.size >= 5%>
          <% survivor.infected = true %>
          <%= survivor.infected %>
          <%else%>
          <%= survivor.infected %>
        <%end%>
      <%end%>

      <%= link_to unlike_survivor_path(survivor), class:"like", method: :put do%>
        <button>uninfected
        <span><%= survivor.get_downvotes.size%></span>
        </button>
      <%end%>

    </li>
  <% end %>

  <% end %>
</ul>


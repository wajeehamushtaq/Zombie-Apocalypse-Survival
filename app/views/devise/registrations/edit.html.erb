<div class="text-center container">
  <div class="d-flex justify-content-around">
    <h2>Edit <%= resource_name.to_s.humanize %> Profile</h2>
    <%= link_to "Back", :back, class:"text-secondary" %>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field row">
    <%= image_tag(resource.avatar_thumbnail) if resource.avatar.attached? %>
  </div>

  <div class="field row">
    <%= f.file_field :avatar %>
  </div>

   <div class="field row">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class:"form-control"  %>
  </div>

  <div class="field row">
    <%= f.label :age %><br />
    <%= f.text_field :age, autofocus: true, class:"form-control"  %>
  </div>

  <div class="field row">
    <%= f.label :gender %><br />
    <%= f.text_field :gender, autofocus: true , class:"form-control"  %>
  </div>

  <div class="field row">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, class:"form-control"  %>
    <br/>
    <p>
    Longitude
    <%= f.text_field :longitude, autofocus: true, disabled: true %>
    </p>
     <p>
    Latitude
    <%= f.text_field :latitude, autofocus: true, disabled: true %>
    </p>
  </div>

  <div class="field row">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control"  %><br/>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field row">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" , class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field row">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"  %>
  </div>

  <div class="field row">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control"  %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-danger" %>
  </div>
<% end %>
<hr />
  <div class="d-flex justify-content-around">
    <h3>Want to delete your account</h3>
    <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
  </div>
</div>